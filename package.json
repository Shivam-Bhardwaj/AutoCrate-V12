{
  "name": "autocrate-v12-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd api && uvicorn main:app --reload --port 8000",
    "dev:web": "cd web && npm run dev",
    "build": "cd web && npm run build",
    "start": "cd web && npm run start",
    "install:all": "npm install && cd web && npm install",
    "deploy": "vercel",
    "test": "npm run test:api && npm run test:web",
    "test:api": "cd api && pytest",
    "test:web": "cd web && npm test"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}